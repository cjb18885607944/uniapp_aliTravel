
.classify{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	text-align: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border: 1px solid #cccccc;
	margin: 20rpx;
	border-radius: 20rpx;
}
.classifyItem{
	width: 25%;
	height: 140rpx;
	border-right: 1px solid #cccccc;
	border-bottom: 1px solid #cccccc;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 30rpx 0rpx;
}
.classifyTitle{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
}
.classifyDesc{
	font-size: 23rpx;
	color: #666;
}
.classifyItem:nth-child(4){
	border-right: none;
}
.classifyItem:nth-child(8){
	border-right: none;
}
.classifyItem:nth-child(n+5){
	border-bottom: none;
}

