
.address{
	position: relative;
}
.addressImg{
	width: 100%;
	height: 400rpx;
}
.addressImg image{
	width: 100%;
	height: 400rpx;
}
.addressText{
	position: absolute;
	height: 400rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	z-index: 99;
	top: 0;
	left: 0;
}
.addressName{
	padding-left: 50rpx;
}
.addressName text{
	font-size: 50rpx;
	font-weight: bold;
	color: #FFFFFF;
	padding-right: 20rpx;
}
.addressName image{
	width: 30rpx;
	height: 30rpx;
}
.wordEng{
	font-size: 30rpx;
	color: #FFFFFF;
	display: block;
	width: 100%;
	letter-spacing: 10rpx;
}
.plane{
	padding: 30rpx 20rpx;
}
.plane image{
	width: 100%;
	border-radius: 20rpx;
}
.mask{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgba(0,51,0,.3);
	z-index: 98;
}

